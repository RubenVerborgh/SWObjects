<message name="prenormalizeInputMessage">
    <part name="body" element="tns:ProjectedChunkFile"/>
</message>

<message name="prenormalizeOutputMessage">
    <part name="body" element="tns:prenormalizeOutput"/>
</message>



<portType name="prenormalizePortType">
    <operation name="opPrenormalize">
      <input message="tns:prenormalizeInputMessage" spat:SPAT="_:x a tns:Abnormal"/>
      <output message="tns:prenormalizeOutputMessage" spat:SPAT="_:x a tns:Normal"/>
    </operation>
</portType>


 <binding name="prenormalizeSOAPBinding" type="tns:prenormalizePortType">
    <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
    <operation name="opPrenormalize">
    <soap:operation soapAction="http://www.semanticbits.com/piq-workflow/prenormalize"/>
      <input>
	<soap:body use="literal"/>
      </input>
      <output>
	<soap:body use="literal"/>
      </output>
    </operation>
  </binding>


<!-- This is mock-up of a service: there is no endpoint associated. - SH -->
<service name="prenormalizeService">
    <port name="prenormalizeServicePort" binding="tns:prenormalizeSOAPBinding">
      <soap:address location="http://www.semanticbits.com/piq-workflow/prenormalize"/>
    </port>
  </service>
